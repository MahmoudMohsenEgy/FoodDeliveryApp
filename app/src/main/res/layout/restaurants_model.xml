<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="134dp"
                android:layout_height="131dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.021"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.053"
                app:srcCompat="@drawable/asiafood1" />

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Papa johns"
                android:textColor="#AF4848"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/restaurantImage"
                app:layout_constraintStart_toEndOf="@+id/restaurantImage"
                app:layout_constraintTop_toTopOf="@+id/restaurantImage"
                app:layout_constraintVertical_bias="0.07" />

            <ImageView
                android:id="@+id/ratingStar"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ratingNumber"
                app:layout_constraintEnd_toStartOf="@+id/ratingNumber"
                app:layout_constraintStart_toStartOf="@+id/restaurantName"
                app:layout_constraintTop_toTopOf="@+id/ratingNumber"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/ratingsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="(373 ratings)"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ratingNumber"
                app:layout_constraintStart_toEndOf="@+id/ratingNumber"
                app:layout_constraintTop_toTopOf="@+id/ratingNumber" />

            <TextView
                android:id="@+id/ratingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="4.7"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/restaurantImage"
                app:layout_constraintEnd_toEndOf="@+id/restaurantName"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="@+id/restaurantName"
                app:layout_constraintTop_toBottomOf="@+id/restaurantName"
                app:layout_constraintVertical_bias="0.144" />

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="251dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Concord Plaza Mall, 90th street near Future University"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/menu_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurantName"
                app:layout_constraintTop_toBottomOf="@+id/ratingNumber"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/working_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10am â€“ 11:30pm"
                app:layout_constraintStart_toStartOf="@+id/restaurantName"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_address" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="182dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#AF4848"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Call"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_phone_call"
                app:iconGravity="textStart"
                app:iconPadding="5dp"
                app:iconSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurantImage"
                app:layout_constraintTop_toBottomOf="@+id/restaurantImage" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="182dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#AF4848"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Menu"

                android:textAllCaps="true"
                app:cornerRadius="20dp"

                app:icon="@drawable/ic_menu"
                app:iconGravity="textStart"
                app:iconPadding="5dp"
                app:iconSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/call_button"
                app:layout_constraintTop_toBottomOf="@+id/restaurantImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>